<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="afterschoolmapper">
 
 	<!-- 학생 방과후 -->
	<resultMap type="AfterschoolStudent" id="asStudentResultSet">
		<result column="STU_ID" property="stuId" />
		<result column="CODE" property="code" />
		<result column="STATUS" property="status" />
	</resultMap>
	
	<resultMap type="AfterSchool" id="afterschoolResultSet">
		<result column="CODE" property="code" />
		<result column="TC_ID" property="tcId" />
		<result column="CLASS_NAME" property="className" />
		<result column="EXPLANATION" property="explanation" />
	</resultMap>
	
	<!-- 방과후 참가 -->
	<insert id="insertAfterschoolCode">
		INSERT INTO AFTERSCHOOL_STUDENT(
		STU_ID,
		CODE
		)VALUES(
		#{stuId},
		#{code}
		)
	</insert>
	
	<!-- 방과후 코드 불러오기 -->
	<select id="afterschoolCode" parameterType="String" resultType="String">
		SELECT CODE
		FROM AFTERSCHOOL_STUDENT
		WHERE STU_ID = #{stuId}
	</select>
	
	<!-- 방과후 반 참가 여부 -->
	<select id="afterschoolStart" parameterType="String" resultMap="asStudentResultSet">
		SELECT *
		FROM AFTERSCHOOL_STUDENT
		WHERE STU_ID = #{stuId}
	</select>
	
	<select id="afterschool" parameterType="String" resultMap="afterschoolResultSet">
		SELECT *
		FROM AFTERSCHOOL
		WHERE CODE = #{code}
	</select>
	
	<select id="afterschoolTeacher" parameterType="String" resultType="String">
		SELECT TC_NAME
		FROM TEACHER
		WHERE TC_ID = #{tcId}
	</select>

 </mapper>